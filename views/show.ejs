<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>BackyardBorrow</title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <nav>
            <a href="/backyard">Back to all Backyards</a>
            <a href="/backyard/new">Post Your Yard</a>
            
        </nav>
        <h1>Backyard Borrow- Show Page</h1>
            <div class="show-container">
                    <div class="backyard-container">
                        <h2><%=backyard.title%></h2>
                        <h3><%=backyard.location%></h3>
                        <%  if (backyard.pool === true) { %>
                             <h4> This yard has a pool </h4>
                        <%} if (backyard.pool === false) {  %>
                               <h4> No pool available </h4>
                            <% } %>
                        <% for (let j = 0; j < backyard.seating.length; j++) { %>
                            <h4>Seating Options</h4>
                            <li><%=backyard.seating[j]%></li>
                        <% } %>
                        <% for (let k = 0; k < backyard.cooking.length; k++) { %>
                            <h4>Cooking Options</h4>
                            <li><%=backyard.cooking[k]%></li>
                        <% } %>
                        <%  if (backyard.petfriendly === true) { %>
                            <h4> Pets welcome </h4>
                       <%} if (backyard.petfriendly === false) {  %>
                              <h4> No pets allowed  </h4>
                           <% } %>
                           <h4>Additional Tags</h4>
                        <% for (let l = 0; l < backyard.tags.length; l++) { %> 
                            <li><%=backyard.tags[l]%></li>
                        <% } %>
                            <h4>Dates Available</h4>
                        <% for (let m = 0; m < backyard.availability.length; m++) { %>
                            <li><%=backyard.availability[m]%></li>
                        <% } %>
                        <br>
                        <img src="<%=backyard.image %>">

                    </div>
                    <div class="reserve-container"></div>
                        <h2>Borrow this Backyard!</h2>
                        <form action="/backyard">
                            Name: <input type="text" name="name" /><br/>
                            Email Address: <input type="text" name="email" /><br/>
                            Phone Number: <input type="number" name="phone" /><br/>
                            Date: <input type="text" name="date" /><br/>
                            Reserve Now: <input type="checkbox" name="reserve" /><br/>
                             <input type="submit" value="Submit Reservation">
                        </form>
                    </div>
                    <div class="buttons-container">
                        <h2>If you are the listing owner:</h2>
                        <form action="/backyard/<%=backyard.id%>/edit" method="GET">
                            <input type="submit" value="Edit Listing">
                        </form>
                        <form action="/backyard/<%=backyard.id%>?_method=DELETE" method="POST">
                            <input type="submit" value="Remove Listing">
                        </form>
                    </div>   
            </div>
    </body>
</html>